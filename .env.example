# ============================================================
# Copy this file to .env.local and fill in your own values.
# .env.local is git-ignored and will never be committed.
# ============================================================

# Resend API Key (https://resend.com)
NEXT_PUBLIC_RESEND_API_KEY=

# Resend Audience ID
NEXT_PUBLIC_AUDIENCE_ID=

# Website Name
NEXT_PUBLIC_SITE_NAME="CUSTRA | Auto Screenshot Tool"

# Website Description (used in meta tags)
NEXT_PUBLIC_SITE_DESCRIPTION="An automatic screenshot tool that can be quickly applied to video conferencing and online courses, allowing you to focus on thinking."

# Website Domain (no trailing slash)
NEXT_PUBLIC_DOMAIN="https://your-domain.com"

# Logo URL
NEXT_PUBLIC_LOGO="https://your-domain.com/icon.png"

# From Email Address
NEXT_PUBLIC_FROM_EMAIL="hello@your-domain.com"

# Social Media Links (leave empty if not used)
NEXT_PUBLIC_LINKEDIN=""
NEXT_PUBLIC_TWITTER=""
NEXT_PUBLIC_GITHUB=""

# Launch Date (YYYY-MM-DD)
NEXT_PUBLIC_LAUNCH_DATE="2026-03-31"

# Landing Page Content
NEXT_PUBLIC_TITLE="Join the waitlist for CUSTRA."
NEXT_PUBLIC_OFFER_TITLE="Exclusive 50% launch discount for waitlist members, three days only."
NEXT_PUBLIC_CURRENT_PRICE="100"
NEXT_PUBLIC_DISCOUNT_PRICE="199"
NEXT_PUBLIC_FEATURES="Feature one, Feature two, Feature three"
NEXT_PUBLIC_PRIVACY="Your privacy is important to us..."
